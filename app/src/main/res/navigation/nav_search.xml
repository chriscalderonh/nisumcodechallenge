<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_search"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.chriscalderonh.nisumcodechallenge.search.ui.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_albumTracksFragment"
            app:destination="@id/albumTracksFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/albumTracksFragment"
        android:name="com.chriscalderonh.nisumcodechallenge.search.ui.AlbumTracksFragment"
        android:label="AlbumTracksFragment"
        tools:layout="@layout/fragment_album_tracks">
        <argument
            android:name="collectionId"
            app:argType="string" />
    </fragment>
</navigation>